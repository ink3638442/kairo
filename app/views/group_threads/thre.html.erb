<div class="row thread">
  <div class="col-md-offset-1 col-md-10">
　　<div class="chat-view">
　　  <div class="thre-update">
        <span class="date-tab">
          <i class="fa fa-clock-o"></i>
          Updated
          &nbsp;
          <%= Date.today.strftime("%Y-%m-%d") %>
        </span>
      </div>
      <div class="product-box">
          <div class="row">
            <div class="thre-title">
              <i class="fa fa-list-ul"></i>
              <%= @title %>
            </div>
            <div class="col-md-9 ">
              <div class="chat-discussion">
                <% @users.each do |user| %>
                  <% if @count%2 == 1 %>
                    <div class="chat-message left">
                      <div class="img-container user-image img-circle pull-left">
                        <%= image_tag user.image %>
                      </div>
                      <span class="message">
                        <a class="message-author" href="#">
                          <%= user.name %>
                        </a>
                        <span class="message-date"> 2015-5-31 - 18:39:23 </span>
                        <span class="message-content">
                        <%= 'サンプルテキストです' * 10 %>
                        </span>
                      </span>
                    </div>
                  <% else @count%2 == 0 %>
                    <div class="chat-message right">
                      <div class="img-container user-image img-circle pull-right">
                        <%= image_tag user.image %>
                      </div>
                      <span class="message">
                        <a class="message-author" href="#">
                          <%= user.name %>
                        </a>
                        <span class="message-date pull-right"> 2015-5-31 - 18:39:23 </span>
                        <span class="message-content">
                        <%= 'サンプルテキストです' * 10 %>
                        </span>
                      </span>
                    </div>
                  <% end %>
                  <% @count+=1 %>
                <% end %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="chat-users">
                <div class="users-list">
                  <% @users.each do |user| %>
                    <div class="chat-user">
                      <div class="img-container user-image img-circle pull-left">
                        <%= image_tag user.image %>
                      </div>
                      <div class="chat-user-name">
                        <%= user.name %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="chat-message-form">
                <div class="form-group">
                  <textarea class="form-control message-input" name="message" placeholder="メッセージを書く"></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
