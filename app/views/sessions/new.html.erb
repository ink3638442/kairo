<div class="loginColumns animated fadeInDown">
  <h1>KAIRO</h1>
  <h3>電子工作共有プラットフォーム</h3>
  <div>
      <div class="ibox-content">
        <%= form_for(:session, url: login_path) do |d| %>
          <%= d.hidden_field :email %>
          <%= d.hidden_field :password %>
          <%= d.submit "DemoDay用 一発ログイン", class: "btn btn-success block full-width m-b demo-submit-margin" %>
          <div class="random_p">《 ランダムのサンプルユーザーでログインします 》</div>
        <% end %>
        <hr>
        <%= form_for(:session, url: login_path) do |f| %>
          
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
    
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.submit "ログイン", class: "btn btn-white block full-width m-b submit-margin" %>
        <% end %>
        <!--<a href="#"><small>Forgot password?</small></a>-->
        <hr>
        <p class="text-muted text-center">
            <!--<small>ユーザー登録はお済みですか？</small>-->
        </p>
          <%= link_to "新規登録", signup_path, class: "btn btn-sm btn-white btn-block" %>
      </div>
    </div>
    
    
    <div class="pv" >
      <%= link_to '>> KAIRO 紹介動画', "https://vimeo.com/168953107", class: "text-color" %>
    </div>
    
</div>
